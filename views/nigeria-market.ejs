<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales of Various Commodities in the Nigerian Market</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            max-width: 1200px;
            padding: 10px;
            box-sizing: border-box;
        }
        .nav {
            width: 100%;
            display: flex;
            justify-content: space-around;
            background-color: #333;
            padding: 10px;
        }
        .nav a {
            color: white;
            text-decoration: none;
        }
        .stats, .charts, .table {
            margin-bottom: 10px;
            width: 100%;
        }
        .charts {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .chart-container {
            width: 48%;
            min-width: 250px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="nav">
        <a href="/">Home</a>
        <a href="/spotify">Spotify</a>
        <a href="/netflix">Netflix</a>
        <a href="/nigeria-market">Nigeria Market</a>
    </div>
    <div class="container">
        <h1>Sales of Various Commodities in the Nigerian Market</h1>

        <div class="stats">
            <h2>Key Metrics</h2>
            <p>Total Sales of Rice: <span id="totalRiceSales">300,000</span></p>
            <p>Total Sales of Beans: <span id="totalBeansSales">200,000</span></p>
            <p>Total Sales of Maize: <span id="totalMaizeSales">150,000</span></p>
            <p>Total Revenue Generated: <span id="revenue">$100,000</span></p>
        </div>

    </div>

    <div class="charts">
        <div class="chart-container">
            <h2>Monthly Sales Performance</h2>
            <canvas id="monthlySalesChart"></canvas>
        </div>
        <div class="chart-container">
            <h2>Sales Distribution</h2>
            <canvas id="salesDistributionChart"></canvas>
        </div>
    </div>

    <div class="table">
        <h2>Top Commodities</h2>
        <table>
            <thead>
                <tr>
                    <th>Commodity</th>
                    <th>Sales Volume</th>
                    <th>Revenue</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Rice</td>
                    <td>300,000</td>
                    <td>$60,000</td>
                </tr>
                <tr>
                    <td>Beans</td>
                    <td>200,000</td>
                    <td>$30,000</td>
                </tr>
                <tr>
                    <td>Maize</td>
                    <td>150,000</td>
                    <td>$10,000</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    var ctx1 = document.getElementById('monthlySalesChart').getContext('2d');
    var monthlySalesChart = new Chart(ctx1, {
        type: 'line',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June'],
            datasets: [{
                label: 'Rice Sales',
                data: [50, 60, 70, 80, 90, 100],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }, {
                label: 'Beans Sales',
                data: [30, 40, 50, 60, 70, 80],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }, {
                label: 'Maize Sales',
                data: [20, 30, 40, 50, 60, 70],
                backgroundColor: 'rgba(255, 206, 86, 0.2)',
                borderColor: 'rgba(255, 206, 86, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    var ctx2 = document.getElementById('salesDistributionChart').getContext('2d');
    var salesDistributionChart = new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: ['Rice', 'Beans', 'Maize'],
            datasets: [{
                data: [300, 200, 150],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        }
    });
</script>
</body>
</html>

